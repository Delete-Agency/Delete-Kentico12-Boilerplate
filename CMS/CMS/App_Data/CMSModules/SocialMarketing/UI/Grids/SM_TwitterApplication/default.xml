<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="TwitterApplicationID">
    <action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$sm.twitterapplication.confirmation.delete$" />
  </actions>
  <columns>
    <column source="TwitterApplicationDisplayName" caption="$general.name$" wrap="false" localize="true" >
      <filter type="text" size="400" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="sm.twitterapplication" columns="TwitterApplicationID,TwitterApplicationDisplayName"/>
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>
