<grid>
  <actions parameters="ObjectID">
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <columns>
    <column source="DisplayName" caption="$general.displayname$" wrap="false" >
      <filter type="text" />
    </column>
    <column source="PageTemplateIsReusable" caption="$pagetemplate.isreusable$" wrap="false" externalsourcename="#yesno" >
      <filter type="bool" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="cms.pagetemplatelist" />
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>