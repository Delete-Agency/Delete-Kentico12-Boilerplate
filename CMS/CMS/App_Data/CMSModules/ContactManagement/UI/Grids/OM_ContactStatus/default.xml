<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="ContactStatusID">
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$"/>
  </actions>
  <columns>
    <column source="ContactStatusDisplayName" caption="$om.contactstatus.displayname$" wrap="false">
      <filter type="text" size="200" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="om.contactstatus" columns="ContactStatusID,ContactStatusDisplayName" />
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>