<grid>
  <actions parameters="ObjectID">
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow" ExternalSourceName="editaction"  />
    <action name="#delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <columns>
    <column source="DisplayName" caption="$general.displayname$" wrap="false" >
	<filter type="text" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="reporting.reportlist" />
  <options> 
    <key name="DisplayFilter" value="true" />
  </options>
</grid>

