<grid>
  <actions parameters="CollectionID">
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <columns>
    <column source="CollectionDisplayName" caption="$general.name$" wrap="false">
      <filter type="text" />
    </column>
    <column source="CollectionEnabled" caption="$general.enabled$" externalsourcename="#yesno" wrap="false" />
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="ecommerce.collection" columns="CollectionID, CollectionDisplayName, CollectionEnabled"/>
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>