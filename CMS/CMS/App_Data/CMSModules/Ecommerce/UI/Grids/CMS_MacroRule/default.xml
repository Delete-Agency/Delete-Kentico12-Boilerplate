<grid>
  <actions parameters="MacroRuleID">
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow"  />
    <action name="#delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <columns>
    <column source="MacroRuleDisplayName" caption="$general.displayname$" wrap="false">
      <filter type="text" />
    </column>
    <column source="MacroRuleCondition" caption="$macros.macrorule.condition$" wrap="false" >
      <filter type="text" />
    </column>
    <column source="MacroRuleEnabled" externalsourcename="#yesno" caption="$general.enabled$" wrap="false" >
      <filter type="bool" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="cms.macrorule" />
  <options>
    <key name="DisplayFilter" value="true" />
    <key name="FilterLimit" value="1" />
  </options>
</grid>