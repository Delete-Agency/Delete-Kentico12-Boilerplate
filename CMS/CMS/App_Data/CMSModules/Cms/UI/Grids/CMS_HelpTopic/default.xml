<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="HelpTopicID">
    <action name="#move" caption="$general.dragmove$" fonticonclass="icon-dots-vertical" externalsourcename="move_modify" />
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" externalsourcename="delete_modify" />
  </actions>
  <columns>
    <column source="HelpTopicName" caption="$general.name$" wrap="false" allowsorting="false" localize="true">
      <filter type="text" />
    </column>
    <column source="HelpTopicLink" caption="$general.Link$" externalsourcename="helptopiclink" wrap="false" allowsorting="false" />
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="CMS.HelpTopic" />
</grid>

