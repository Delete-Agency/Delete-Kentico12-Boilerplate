<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <objecttype name="cms.resource" />
  <actions parameters="ResourceID">
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="delete" externalsourcename="delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <columns>
    <column source="ResourceDisplayName" caption="$unigrid.modulelist.columns.resourcedisplayname$" wrap="false" >
      <filter type="text" />
    </column>
    <column source="ResourceID" caption="$general.sitename$" visible="false">
      <filter type="site" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>
