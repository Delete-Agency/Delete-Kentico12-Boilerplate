<grid>
  <actions parameters="MacroRuleID">
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="#delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <columns>
    <column source="MacroRuleDisplayName" caption="$general.displayname$" wrap="false">
      <filter type="text" />
    </column>
    <column source="MacroRuleCondition" caption="$macros.macrorule.condition$" wrap="true" cssclass="main-column-100" >
      <filter type="text" />
    </column>
    <column source="MacroruleResourceName" caption="$macros.macrorule.resourcename$" wrap="false" >
      <filter path="~/CMSModules/Macros/Controls/UI/MacroRule/CategoryFilter.ascx" />
    </column>
    <column source="MacroRuleEnabled" externalsourcename="#yesno" caption="$general.enabled$" wrap="false" localize="true">
      <filter type="bool" />
    </column>
  </columns>
  <objecttype name="cms.macrorule" />
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>