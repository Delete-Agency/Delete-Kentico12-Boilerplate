<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <objecttype name="cms.class" />
  <actions parameters="ClassID">
    <action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="delete" externalsourcename="delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <columns>
    <column source="ClassID" visible="false" />
    <column source="ClassDisplayName" caption="$general.displayname$" wrap="false" />
    <column source="ClassName" caption="$general.codename$" wrap="false" />
    <column source="ClassTableName" caption="$sysdev.classes.tablename$" wrap="false" />
    <column source="ClassShowAsSystemTable" caption="$classes.iscustomizable$" wrap="false" externalsourcename="#yesno" />
    <column cssclass="filling-column" />
  </columns>
  <options>
    <key name="DisplayFilter" value="true" />
    <key name="FilterPath" value="~/CMSModules/Modules/Controls/Class/Filter.ascx" />
  </options>
</grid>

