<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="view" caption="$general.action$" fonticonclass="icon-eye" fonticonstyle="allow" externalsourcename="view" />
  </actions>
  <columns>
    <column source="EventType" caption="$general.type$" externalsourcename="eventtype" wrap="false" />
    <column source="EventTime" caption="$Unigrid.EventLog.Columns.EventTime$" wrap="false" />
    <column source="Source" caption="$Unigrid.EventLog.Columns.Source$" wrap="false" />
    <column source="EventCode" caption="$Unigrid.EventLog.Columns.EventCode$" wrap="false" />
    <column source="UserName" externalsourcename="formattedusername" caption="$general.username$" wrap="false" />
    <column source="IPAddress" caption="$Unigrid.EventLog.Columns.IPAdress$" wrap="false" />
    <column source="DocumentName" caption="$general.documentname$" wrap="false" maxlength="50">
      <tooltip source="DocumentName" width="0" />
    </column>
    <column source="SiteID" externalsourcename="#sitename" caption="$general.site$" wrap="false" localize="true" />
    <column source="EventMachineName" caption="$Unigrid.EventLog.Columns.MachineName$" wrap="false" />
    <column source="EventID" visible="false" />
    <column cssclass="filling-column" />
  </columns>
  <options>
    <key name="DisplayFilter" value="true" />
    <key name="FilterPath" value="~/CMSModules/EventLog/Controls/EventFilter.ascx" />
  </options>
</grid>