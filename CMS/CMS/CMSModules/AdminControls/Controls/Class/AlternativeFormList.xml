<?xml version="1.0" encoding="utf-8" ?>
<grid>
    <actions parameters="FormID">
        <action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
        <action name="delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
    </actions>
    <columns>
        <column source="FormDisplayName" caption="$general.displayname$" wrap="false" localize="true">
            <filter type="text" />
        </column>
        <column source="FormName" caption="$general.codename$" wrap="false" localize="true">
            <filter type="text" />
        </column>
        <column source="FormHideNewParentFields" externalsourcename="#yesno" caption="$alternativeforms.hidesnewparentfields$" wrap="false" />
        <column cssclass="filling-column" />
    </columns>
    <objecttype name="cms.alternativeform" columns="FormID, FormDisplayName, FormName, FormHideNewParentFields" />
    <options>
        <key name="DisplayFilter" value="true" />
    </options>
</grid>
