<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="LibraryID">
    <action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$General.ConfirmDelete$" />
  </actions>
  <columns>
    <column source="LibraryDisplayName" caption="$general.name$" wrap="false" localize="true" />
    <column source="LibraryFolder" caption="$general.folder$" wrap="false" />
    <column source="LibraryDescription" caption="$general.description$" istext="true" wrap="false" localize="true" maxlength="100">
      <tooltip source="LibraryDescription" width="0" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="media.grouplibrary" columns="LibraryID, LibraryDisplayName, LibraryFolder, LibraryDescription" />
  <options>
    <key name="DisplayFilter" value="false" />
  </options>
</grid>
