<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="select" externalsourcename="select" caption="$dialogs.list.actions.select$" fonticonclass="icon-chevron-right" />
    <action name="selectsubdocs" externalsourcename="selectsubdocs" caption="$dialogs.list.actions.showsubfolders$" fonticonclass="icon-arrow-crooked-right" />
    <action name="delete" externalsourcename="delete" caption="$dialogs.list.actions.delete$" fonticonclass="icon-bin" fonticonstyle="critical" />
    <action name="edit" externalsourcename="edit" caption="$dialogs.list.actions.edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
  </actions>
  <columns>
    <column source="##ALL##" externalsourcename="name" caption="$general.name$" cssclass="main-column-100" wrap="false" sort="name" >
    </column>
    <column source="##ALL##" externalsourcename="type" caption="$general.type$" wrap="false" sort="type">
    </column>
    <column source="##ALL##" externalsourcename="size" caption="$general.size$" wrap="false"  sort="size">
    </column>
    <column source="##ALL##" externalsourcename="filemodified" caption="$general.modified$" wrap="false" sort="filemodified">
    </column>
  </columns>
  <pager>
    <key name="PageSizeOptions" value="10,20,50,100,##ALL##" />
    <key name="DefaultPageSize" value="10" />
    <key name="ShowPageSize" value="true" />
  </pager>
  <options>
    <key name="DisplayFilter" value="false" />
    <key name="ShowSelection" value="false" />
  </options>
</grid>
