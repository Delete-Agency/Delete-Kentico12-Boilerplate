<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions>
    <action name="select" externalsourcename="select" caption="$dialogs.list.actions.select$" fonticonclass="icon-chevron-right" />
    <action name="selectsubdocs" externalsourcename="selectsubdocs" caption="$dialogs.list.actions.showsubdocuments$" fonticonclass="icon-arrow-crooked-right" />
    <action name="view" externalsourcename="view" caption="$dialogs.list.actions.view$" fonticonclass="icon-eye" fonticonstyle="allow" />
    <action name="edit" externalsourcename="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
  </actions>
  <columns>
    <column source="##ALL##" externalsourcename="extedit" caption="$general.update$" wrap="false" columnname="extedit" cssclass="unigrid-actions" />
    <column source="##ALL##" externalsourcename="name" caption="$general.name$" cssclass="main-column-100" wrap="false" sort="DocumentName" />
    <column source="##ALL##" externalsourcename="type" caption="$general.type$" wrap="false" sort="AttachmentExtension" />
    <column source="##ALL##" externalsourcename="size" caption="$general.size$" wrap="false" />
    <column source="DocumentModifiedWhen" externalsourcename="documentmodifiedwhen" caption="$general.modified$" wrap="false">
      <tooltip source="DocumentModifiedWhen" externalsourcename="documentmodifiedwhentooltip" />
    </column>
  </columns>
  <pager>
    <key name="DefaultPageSize" value="10" />
    <key name="PageSizeOptions" value="10,25,50,100,##ALL##" />
  </pager>
  <options>
    <key name="DisplayFilter" value="false" />
  </options>
</grid>
