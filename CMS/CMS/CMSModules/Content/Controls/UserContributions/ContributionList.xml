<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions >
    <action name="edit" externalsourcename="edit" commandargument="NodeID" caption="$Contribution.Actions.Edit$" fonticonclass="icon-edit" fonticonstyle="allow"/>
    <action name="delete" externalsourcename="delete" commandargument="DocumentID" caption="$Contribution.Actions.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$Contribution.Actions.Delete.Confirmation$" />
  </actions>
  <columns>
    <column source="DocumentName" caption="$general.documentname$" wrap="false" />
    <column source="##ALL##" externalsourcename="#published" caption="$general.published$" wrap="false" />
    <column source="DocumentModifiedWhen" externalsourcename="DocumentModifiedWhen" caption="$Contribution.Columns.ModifiedWhen$" wrap="false">
      <tooltip source="DocumentModifiedWhen" externalsourcename="documentmodifiedwhentooltip" />
    </column>
    <column source="DocumentWorkflowStepID" externalsourcename="DocumentWorkflowStepID"  caption="$Contribution.Columns.WorkflowStep$" wrap="false" />
    <column cssclass="filling-column" />
  </columns>
  <pager>
    <key name="ShowDirectPageControl" value="false" />
  </pager>
  <options>
    <key name="DisplayFilter" value="false" />
  </options>
</grid>
