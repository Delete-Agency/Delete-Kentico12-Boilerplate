<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="MVTVariantID">
    <action name="edit" caption="$general.edit$" fonticonclass="icon-edit" fonticonstyle="allow" onclick="if (window.EditMVTVariant) {window.EditMVTVariant({0}); return false;}" />
    <action name="delete" caption="$general.delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$general.confirmdelete$" />
  </actions>
  <columns>
    <column source="MVTVariantDisplayName" caption="$general.displayName$" wrap="false">
      <filter type="text" />
    </column>
    <column source="MVTVariantName" caption="$general.name$" wrap="false" />
    <column source="MVTVariantEnabled" caption="$general.enabled$" wrap="false" externalsourcename="MVTVariantEnabled">
      <filter type="bool" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="om.mvtvariant" />
  <options>
    <key name="DisplayFilter" value="true" />
  </options>
</grid>
