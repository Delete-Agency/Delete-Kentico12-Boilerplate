      <filter type="text" />
    </column>
    <column source="TaskCreated" caption="$Unigrid.WebFarmServers.Columns.TaskCreated$" wrap="false" />
    <column source="TaskMachineName" caption="$Unigrid.WebFarmServers.Columns.TaskMachineName$" wrap="false">
