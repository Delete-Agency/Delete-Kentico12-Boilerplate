<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="NodeID;NodeHasChildren">
    <action name="select" commandargument="NodeID" externalsourcename="select" caption="$general.select$" fonticonclass="icon-chevron-right" />
    <action name="showsubdocuments" externalsourcename="showsubdocuments" caption="$synchronization.showsubdocuments$" fonticonclass="icon-arrow-crooked-right" />
  </actions>
  <columns>
    <column source="##ALL##" sort="documentname" externalsourcename="documentname" caption="$general.documentname$" wrap="false" cssclass="main-column-100" >
      <tooltip source="##ALL##" externalsourcename="documentnametooltip" width="0" encode="false" />
    </column>
    <column source="ClassDisplayName" caption="$general.documenttype$" wrap="false" maxlength="50" >
      <tooltip source="ClassDisplayName" width="0" />
    </column>
    <column source="DocumentModifiedWhen" caption="$synchronization.lastmodified$" wrap="false" />
  </columns>
</grid>