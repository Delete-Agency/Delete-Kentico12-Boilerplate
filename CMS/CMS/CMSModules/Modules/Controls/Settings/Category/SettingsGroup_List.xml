<?xml version="1.0" encoding="utf-8" ?>
<grid>
  <actions parameters="KeyID">
    <action name="edit" caption="$General.Edit$" fonticonclass="icon-edit" fonticonstyle="allow" />
    <action name="delete" caption="$General.Delete$" fonticonclass="icon-bin" fonticonstyle="critical" confirmation="$General.ConfirmDelete$" externalsourcename="action" />
    <action name="moveup" caption="$General.MoveUp$" fonticonclass="icon-chevron-up" externalsourcename="action"/>
    <action name="movedown" caption="$General.MoveDown$" fonticonclass="icon-chevron-down" externalsourcename="action" />
    <action name="ishidden" externalsourcename="ishidden" caption="$settings.ishidden$" fonticonclass="icon-exclamation-triangle" fonticonstyle="warning" />
  </actions>
  <columns>
    <column source="KeyDisplayName" externalsourcename="KeyDisplayName" caption="$general.displayname$" wrap="false" allowsorting="false">
      <filter type="text" />
    </column>
    <column source="KeyName" externalsourcename="KeyName" caption="$general.codename$" wrap="false" allowsorting="false">
      <filter type="text" />
    </column>
    <column cssclass="filling-column" />
  </columns>
  <objecttype name="cms.settingskey" Columns="KeyID,KeyName,KeyDisplayName,KeyIsHidden" />
  <options>
    <key name="DisplayFilter" value="false" />
  </options>
</grid>
